<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
        <link rel="stylesheet" href="/stylesheets/hamburger.css">
        <link rel="stylesheet" href="/stylesheets/show.css">
        <title>PubLib</title>
    </head>

    <body>
        <div class="ui stackable menu">
            <a class="header item" href="/">PubLib</a>
            <% if(!currentUser){ %>
            <div class="right menu">
                <a href="/register" class="item">Signup</a>
                <a href="/login" class="item">Login</a>
            </div>
            <% } else{ %>
            <div class="right menu">
                <div class="ui dropdown item">
                    Logged in as <%= currentUser.username %> <i class="dropdown icon"></i>
                    <div class="menu">
                        <a href="/logout" class="item">Logout</a>
                    </div>
                </div>
            </div>
            <% } %>
            <div class="hamburger">
                <span class="hamburger-bun"></span>
                <span class="hamburger-patty"></span>
                <span class="hamburger-bun"></span>
            </div>
        </div>

        <div class="ui container flex">
                <a href="/entries/new" class="ui inverted button">New</a>
                <div class="ui stackable grid">
                    <% if(entries.length > 0){ %>
                    <% entries.forEach(function(entry){ %>
                    <div class="ui four wide column">
                        <div class="ui card">
                            <div class="content">
                                <div class="header">
                                    <%= entry.title %>, by <%= entry.author %>
                                </div>
                                <div class="description">
                                    Borrowed by <%= entry.borrower.username %>
                                </div>
                                <div class="meta">
                                    <span class="date">Borrowed on 20.06.2020</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                    <% }else{ %>
                </div>
                    <h2>
                        No entries yet
                    </h2>
                <% } %>
        </div>

<%- include("../partials/footer"); %>
