<%- include("../partials/header"); %>

<div class="ui container">
    <form action="/register" method="POST" class="ui form">
        <!-- <h1>Sign Up</h1> -->
        <div class="field">
            <label>Username</label>
            <input type="text" name="user[username]" placeholder="Your username" required>
        </div>
        <div class="field">
            <label>Password</label>
            <input type="password" name="user[password]" placeholder="Your password" required>
        </div>
        <div class="field">
            <div class="ui checkbox">
                <input type="checkbox" tabindex="0">
                <label>I am an administrator</label>
            </div>
        </div>
        <div class="field">
            <label>Administrator Code</label>
            <input type="password" name="user[adminCode]" placeholder="Your assigned administrator code">
        </div>
        <button class="ui red button" type="submit">Submit</button>
    </form>
</div>

<%- include("../partials/footer"); %>